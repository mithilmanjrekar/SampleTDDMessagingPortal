        templateUrl: "500.html"
    })
 
   // set route for the contact page
 
    .when('/messages',{
        controller: 'MessagesCtrl',
        templateUrl: '500.html'
    })
 
    // if not match with any route config then send to home page
 
     .otherwise({
        redirectTo: '/users'
      });
});
 
