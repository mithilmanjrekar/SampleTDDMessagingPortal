var myApp = angular.module('myApp', ['ngRoute']);
 
//Now Configure  our  routing
myApp.config(function ($routeProvider, $locationProvider) {
    console.log("route");
    $routeProvider
    // set route for the home page
    .when('/users',
    {
        controller: 'UserCtrl',
        templateUrl: '404.html'
    })
 
     // set route for the about page
 
    .when('/conversations',{
